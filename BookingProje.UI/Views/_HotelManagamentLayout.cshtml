<!DOCTYPE html>
<html class="app">
<head>
    <meta charset="utf-8" />
    <title>Otel Yönetim Sistemi</title>
    <meta name="description" content="app, web app, responsive, admin dashboard, admin, flat, flat ui, ui kit, off screen nav" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" href="~/LayoutHotelPanel/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/LayoutHotelPanel/css/animate.css" type="text/css" />
    <link rel="stylesheet" href="~/LayoutHotelPanel/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="~/LayoutHotelPanel/css/font.css" type="text/css" />
    <link rel="stylesheet" href="~/LayoutHotelPanel/js/calendar/bootstrap_calendar.css" type="text/css" />
    <link rel="stylesheet" href="~/LayoutHotelPanel/css/app.css" type="text/css" />
    <!--[if lt IE 9]>
      <script src="js/ie/html5shiv.js"></script>
      <script src="js/ie/respond.min.js"></script>
      <script src="js/ie/excanvas.js"></script>
    <![endif]-->
</head>
<body>
    <section class="vbox">
        @Html.Action("GorevliBilgileri", "OtelPaneli")
        <section>
            <section class="hbox stretch">
                <!-- .aside -->
                <aside class="bg-dark lter aside-md hidden-print" id="nav">
                    <section class="vbox">
                        <section class="w-f scrollable">
                            <div class="slim-scroll" data-height="auto" data-disable-fade-out="true" data-distance="0" data-size="5px" data-color="#333333">

                                <!-- nav -->
                                <nav class="nav-primary hidden-xs">
                                    <ul class="nav">
                                        <li class="active">
                                            <a href="~/OtelPaneli/Index" class="active">
                                                <i class="fa fa-dashboard icon">
                                                    <b class="bg-danger"></b>
                                                </i>
                                                <span>Panel</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#layout">
                                                <i class="fa fa-columns icon">
                                                    <b class="bg-warning"></b>
                                                </i>
                                                <span class="pull-right">
                                                    <i class="fa fa-angle-down text"></i>
                                                    <i class="fa fa-angle-up text-active"></i>
                                                </span>
                                                <span>Otel Paneli</span>
                                            </a>
                                            <ul class="nav lt">
                                                <li>
                                                    <a href="/OtelPaneli/OtelBilgileriGuncelle">
                                                        <i class="fa fa-angle-right"></i>
                                                        <span>Otel Bilgilerini Güncelle</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/OtelPaneli/OtelOdalari">
                                                        <i class="fa fa-angle-right"></i>
                                                        <span>Oda Ekle/Sil/Güncelle</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a href="/OtelPaneli/OtelYorumlari">
                                                <b class="badge bg-danger pull-right">3</b>
                                                <i class="fa fa-envelope-o icon">
                                                    <b class="bg-primary dker"></b>
                                                </i>
                                                <span>Yorumlar</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/OtelPaneli/AdmineMailGonderme">
                                                <i class="fa fa-pencil icon">
                                                    <b class="bg-info"></b>
                                                </i>
                                                <span>Öneri Yaz</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                                <!-- / nav -->
                            </div>
                        </section>
                        <footer class="footer lt hidden-xs b-t b-dark">
                            <div id="chat" class="dropup">
                                <section class="dropdown-menu on aside-md m-l-n">
                                    <section class="panel bg-white">
                                        <header class="panel-heading b-b b-light">Active chats</header>
                                        <div class="panel-body animated fadeInRight">
                                            <p class="text-sm">No active chats.</p>
                                            <p><a href="#" class="btn btn-sm btn-default">Start a chat</a></p>
                                        </div>
                                    </section>
                                </section>
                            </div>
                            <div id="invite" class="dropup">
                                <section class="dropdown-menu on aside-md m-l-n">
                                    <section class="panel bg-white">
                                        <header class="panel-heading b-b b-light">
                                            John <i class="fa fa-circle text-success"></i>
                                        </header>
                                        <div class="panel-body animated fadeInRight">
                                            <p class="text-sm">No contacts in your lists.</p>
                                            <p><a href="#" class="btn btn-sm btn-facebook"><i class="fa fa-fw fa-facebook"></i> Invite from Facebook</a></p>
                                        </div>
                                    </section>
                                </section>
                            </div>
                            <a href="#nav" data-toggle="class:nav-xs" class="pull-right btn btn-sm btn-dark btn-icon">
                                <i class="fa fa-angle-left text"></i>
                                <i class="fa fa-angle-right text-active"></i>
                            </a>
                            <div class="btn-group hidden-nav-xs">
                                <button type="button" title="Chats" class="btn btn-icon btn-sm btn-dark" data-toggle="dropdown" data-target="#chat"><i class="fa fa-comment-o"></i></button>
                                <button type="button" title="Contacts" class="btn btn-icon btn-sm btn-dark" data-toggle="dropdown" data-target="#invite"><i class="fa fa-facebook"></i></button>
                            </div>
                        </footer>
                    </section>
                </aside>
                <!-- /.aside -->
                <section id="content">
                    <section class="vbox">
                        <section class="scrollable padder">
                            <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
                                <li><a href="index.html"><i class="fa fa-home"></i> Panel</a></li>
                                <li class="active">Anasayfa</li>
                            </ul>
                            @RenderBody()
                        </section>
                    </section>
                </section>
            </section>
        </section>
    </section>
    <script src="~/LayoutHotelPanel/js/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/LayoutHotelPanel/js/bootstrap.js"></script>
    <!-- App -->
    <script src="~/LayoutHotelPanel/js/app.js"></script>
    <script src="~/LayoutHotelPanel/js/app.plugin.js"></script>
    <script src="~/LayoutHotelPanel/js/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/LayoutHotelPanel/js/charts/easypiechart/jquery.easy-pie-chart.js"></script>
    <script src="~/LayoutHotelPanel/js/charts/sparkline/jquery.sparkline.min.js"></script>
    <script src="~/LayoutHotelPanel/js/charts/flot/jquery.flot.min.js"></script>
    <script src="~/LayoutHotelPanel/js/charts/flot/jquery.flot.tooltip.min.js"></script>
    <script src="~/LayoutHotelPanel/js/charts/flot/jquery.flot.resize.js"></script>
    <script src="~/LayoutHotelPanel/js/charts/flot/jquery.flot.grow.js"></script>
    <script src="~/LayoutHotelPanel/js/charts/flot/demo.js"></script>
    <script src="~/LayoutHotelPanel/js/calendar/bootstrap_calendar.js"></script>
    <script src="~/LayoutHotelPanel/js/calendar/demo.js"></script>
    <script src="~/LayoutHotelPanel/js/sortable/jquery.sortable.js"></script>
</body>
</html>